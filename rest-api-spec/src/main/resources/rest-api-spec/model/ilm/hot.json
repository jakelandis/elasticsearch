{
  "$schema": "http://json-schema.org/2019-09/schema#",
  "type": "object",
  "$defs": {
    "hot": {
      "type": "object",
      "properties": {
        "min_age": {
          "type": "string"
        },
        "actions": {
          "type": "object",
          "properties": {
            "rollover": {
              "type": "object",
              "properties": {
                "max_age": {
                  "type": "string"
                },
                "max_size": {
                  "type": "string"
                },
                "max_docs": {
                  "type": "integer"
                }
              }
            },
            "set_priority": {
              "type": "object",
              "properties": {
                "priority": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    }
  }
}